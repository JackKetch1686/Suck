<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="55dp"
>
    <ImageView android:layout_width="50dp" android:layout_height="50dp"
               android:id="@+id/image"
               android:layout_marginVertical="2dp"
               android:layout_marginHorizontal="5dp"
               android:scaleType="fitXY"
    />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginBottom="5dp"
                  android:orientation="vertical">
        <TextView android:layout_width="match_parent"
                  android:layout_height="25dp"
                  android:layout_marginBottom="5dp"
                  android:id="@+id/name_of_song"
                  android:singleLine="true"
                  tools:text="song"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView android:layout_width="177dp" android:layout_height="match_parent"
                      android:layout_marginEnd="5dp"
                      android:id="@+id/name_of_artist"
                      android:singleLine="true"
                      tools:text="artist"/>
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                      android:id="@+id/album"
                      android:singleLine="true"

                      tools:text="album"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
